<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render 'fields', form: f %>

      <%= f.button "Create my account", class: "btn btn-lg btn-primary", id: "create" %>
      <%= f.button "Cancel", class: "btn offset1", type: "cancel" %>

    <% end %>
  </div>
</div>
